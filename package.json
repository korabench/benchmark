{
  "name": "@korabench/public",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@4.12.0",
  "scripts": {
    "ts": "tsc --build --watch",
    "tsbuild": "tsc --build",
    "build:clean": "rm -rf ./build ./packages/*/build",
    "lint": "eslint .",
    "pretty": "prettier --check './packages/*/src/**/*.{js,ts,jsx,tsx,json}'",
    "pretty:write": "prettier --write './packages/*/src/**/*.{js,ts,jsx,tsx,json}'",
    "test": "vitest run",
    "test:watch": "vitest",
    "kora": "yarn workspace @korabench/cli kora",
    "kora:env": "yarn workspace @korabench/cli kora:env"
  },
  "devDependencies": {
    "@eslint/js": "10.0.1",
    "@typescript-eslint/eslint-plugin": "8.55.0",
    "@typescript-eslint/parser": "8.55.0",
    "@typescript-eslint/utils": "8.55.0",
    "eslint": "10.0.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-drizzle": "0.2.3",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "globals": "17.3.0",
    "prettier": "3.8.1",
    "prettier-plugin-organize-imports": "4.3.0",
    "prettier-plugin-tailwindcss": "0.7.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.55.0",
    "vitest": "4.0.18"
  }
}
